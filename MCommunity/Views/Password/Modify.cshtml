@model MCommunity.Models.ChangePasswordModel
@{
    ViewBag.Title = "Modify";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

                <ul class="breadcrumb" style="margin-bottom: 5px;">
                    <li><a href="/blog/changvh">首页</a> <span class="divider">/</span></li>
                    <li><a href="/admin/home">管理</a> <span class="divider">/</span></li>                  
                    <li class="active">密码修改</li>
                </ul>
                <div class="back-right-inner">
                    <!-- pwd start ================================================== -->
                    	<div class="box" style="padding:20px;">
							@using (@Html.BeginForm("Modify", "Password", FormMethod.Post, new { @class = "form-horizontal", style = "margin-left:80px;padding-top:20px;", data_validatable = true, id = "changePwdForm" }))
                            { 
                                @Html.ValidationSummary(true)
					            <div class="control-group">
					              <label class="control-label muted" for="oldPassword">旧登录密码</label>
					              <div class="controls">
                                    @Html.PasswordFor(_ => _.OldPassword, new { @class = "span4" })@Html.ValidationMessageFor(_ => _.OldPassword)
					              </div>
					            </div>
					            <div class="control-group">
					              <label class="control-label muted" for="newPassword">新密码</label>
					              <div class="controls">
					                @Html.PasswordFor(_ => _.NewPassword, new { @class = "span4" }) @Html.ValidationMessageFor(_ => _.NewPassword)
					              </div>
					            </div>
					            <div class="control-group">
					              <label class="control-label muted" for="reNewPassword">再次输入新密码</label>
					              <div class="controls">
					                @Html.PasswordFor(_ => _.ReNewPassword, new { @class = "span4" })@Html.ValidationMessageFor(_ => _.ReNewPassword)
					                <span id="oo"></span>
					              </div>
					            </div>
					            <div class="control-group">
					              <div class="controls">
					                <input type="submit" class="btn btn-primary" value="保存修改">&emsp;&emsp;<a href="/password/forget" target="_blank">忘记登录密码?</a>
					                <span id="oK"></span>
					              </div>
					            </div>
					        }
                        </div>
                    <!-- pwd end ================================================== -->
                </div>

