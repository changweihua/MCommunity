        //});

        $('#changepassword').click(function (event) {
            event.preventDefault();
            $.ajax({
                dataType: 'json',
                type: 'POST',
                url: '/password/modify',
                data: {},
                dataType: 'json',
                success: function (data, textStatus, jqXHR) {
                    showTip('添加成功');
                }
            });
        });
    });

    function showTip(msg) {
       
        art.dialog({
            title: '信息提示',
            content: msg,

        }).time(3000).follow(document.getElementById('category_add'));

    }

</script>
