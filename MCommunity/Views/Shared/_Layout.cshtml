@{
    ViewBag.Site = "CMONO.NET 社区";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Site = @ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/x-icon" href="@Url.Content("~/Content/favicon.ico")" />

    <link href="@Url.Content("~/Content/bootstrap/default/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap/default/css/font-awesome.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap/default/css/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />

    @* <link href="@Url.Content("~/Content/bootstrap/fuelux/css/fuelux.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap/fuelux/css/fuelux-responsive.min.css")" rel="stylesheet" type="text/css" />*@

    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.6.2.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Content/bootstrap/default/js/bootstrap.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/jsrender.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.cookie.js")" type="text/javascript"></script>

    <link href="@Url.Content("~/Content/widgets/artDialog/skins/twitter.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/widgets/artDialog/artDialog.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/widgets/artDialog/artDialog.plugins.min.js")" type="text/javascript"></script>

    @*<script src="@Url.Content("~/Content/bootstrap/fuelux/all.min.js")" type="text/javascript"></script>*@

    @RenderSection("Scripts", false)
    <style type="text/css">
        body
        {
            padding-top: 70px;
            padding-bottom: 40px;
        }

        form
        {
            margin: 0;
        }

        textarea
        {
            display: block;
        }
        ul{margin:0;padding:0;}
.bx_wrap {margin-left: 10px; margin-top:10px}
.bx_wrap ul img { border: 2px solid #ddd; }
.bx_wrap ul li{text-align:center}
.bx_wrap ul li a:hover{text-decoration:none; color:#f30}
.bx_wrap a.prev {width:20px;height:24px;line-height:24px;outline-style:none;outline-width: 0;position:absolute; top:45px; left:-2px; text-indent:-999em; background: url(@Url.Content("~/Content/arr_left.gif")) no-repeat;}
.bx_wrap a.next {width:20px;height:24px;line-height:24px; left:626px;position: absolute;top:45px; text-indent:-999em; background:url(@Url.Content("~/Content/arr_right.gif")) no-repeat;}
    </style>
</head>

<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid span12">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="offset1">
                    <a class="brand blue" href="http://www.cmono.net/">CMONO.NET社区</a>
                </div>
                <div class="nav-collapse">
                    @RenderSection("TopRight", false)
                </div>
                <!-- /.nav-collapse -->
            </div>
        </div>
        <!-- /navbar-inner -->
    </div>
    <!-- /navbar -->
    <div class="container">
        <div class="row alert alert-info">
            @RenderSection("Banner", false)
        </div>
    </div>
    <div class="container">
        <div class="row">
            @RenderBody()
        </div>
    </div>
    <div class="container">
        @RenderSection("FriendLinks", false)
    </div>
    <div class="container">
        @Html.Action("CopyRight", "Global")
    </div>
    <div id="sideBar" class="row" style="position:fixed;bottom:5px;left:0px;">
        <div class="span2">
            <div class="btn-toolbar">
                <div class="btn-group">
                    <button id="toggleShow" data-val="hide" class="btn btn-inverse"><i class="icon-chevron-right"></i></button>
                    <button data-val="comment" class="btn"><i class="icon-comment"></i></button>
                    <button data-val="qrcode" class="btn"><i class="icon-qrcode"></i></button>
                    <button data-val="refresh" class="btn"><i class="icon-refresh"></i></button>
                    <button data-val="lock" class="btn"><i class="icon-lock"></i></button>
                </div>
            </div>
            @*<button id="toggleSideBar" class="btn btn-inverse"><i class="icon-chevron-right"></i></button>*@
        </div>
        <div id="barContent" style="display:none;" class="span3 alert-info alert alert-block">
            aaaaaaaaaa
        </div>
    </div>
    <script>
        $(function () {
            $('#toggleShow').click(function () {
                $(this).siblings().toggle('slow', 'linear', function () {
                    if ($(this).attr('data-val') == 'show') {
                        $('#toggleShow').html('<i class="icon-chevron-left"></i>').attr('data-val', 'hide')
                    } else {
                        $('#toggleShow').html('<i class="icon-chevron-right"></i>').attr('data-val', 'show')
                    }
                });
            });
            $('#toggleShow').trigger('click');
            $('#toggleShow').siblings().click(function () {
                var cmd = $(this).attr('data-val');
                switch (cmd) {
                    case 'refresh':
                        break;
                    case 'qrcode':
                        break;
                    case 'comment':
                        break;
                    case 'lock':
                        art.dialog({
                            title: '信息提示',
                            content: '锁住页面',
                            esc: true,
                            lock: true
                        });
                        break;
                }
            });
        });
    </script>
</body>
</html>
